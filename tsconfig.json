{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
     // "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "jsx": "preserve",
    "outDir": "dist",
    "declaration": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "types": ["vitest/globals"],
    // "paths": {
    //   "~/*": ["./src/*"]
    // }
  },

  "include": ["src/**/*.ts", "src/style.css", "src/**/*.d.ts", "src/**/*.tsx", "src/components/**/*.vue"],
  "exclude": ["src/App.vue", "src/main.ts", "src/components/**/*.stories.ts", "src/components/**/*.spec.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
